# Set shut down, restart and locking features
bindsym $mod+Shift+e mode "$mode_system"
set $mode_system (q)uit user, (e)xit to lockscreen, (s)uspend, (h)ibernate, hy(b)rid sleep, (f)ast logout, switch (u)ser, (r)eboot, (Shift+s)hutdown, exit i3 (Shift+i)
mode "$mode_system" {
    # bindsym s exec --no-startup-id xfce4-session-logout --suspend, mode "default"
    # bindsym u exec --no-startup-id xfce4-session-logout --switch-user, mode "default"
    # bindsym q exec --no-startup-id xfce4-session-logout --logout, mode "default"
    # bindsym h exec --no-startup-id xfce4-session-logout --hibernate, mode "default"
    # bindsym b exec --no-startup-id xfce4-session-logout --hybrid-sleep, mode "default"
    # bindsym f exec --no-startup-id xfce4-session-logout --fast, mode "default"
    # bindsym r exec --no-startup-id xfce4-session-logout --reboot, mode "default"
    # bindsym Shift+s exec --no-startup-id xfce4-session-logout -h, mode "default"
    bindsym e exec --no-startup-id "loginctl lock-session $XDG_SESSION_ID", mode "default"
    bindsym b exec --no-startup-id systemctl hybrid-sleep, mode "default"
    bindsym q exec --no-startup-id "loginctl terminate-session $XDG_SESSION_ID", mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl suspend-then-hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"
    # exit i3 (logs you out of your X session)
    bindsym Shift+i exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

